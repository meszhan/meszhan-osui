{
    "private": true,
    "workspaces": [
        "packages/*",
        "packages/ui/*",
        "packages/ui/docs/*",
        "packages/ui-icons/*",
        "packages/ui-theme/*"
    ],
    "name": "osui-monorepo",
    "description": "通用组件库",
    "author": "osc,baidu",
    "license": "MIT",
    "scripts": {
        "lint": "pnpm workspaces run lint",
        "build": "lerna run --stream --sort build && pnpm --filter @osui/ui build-all  && pnpm build-check",
        "clean": "pnpm workspaces run clean",
        "storybook": "start-storybook -p 8777 -s public",
        "version": "lerna version --conventional-commits --no-push",
        "commit": "git-cz",
        "new-component": "sh scripts/new-component.sh",
        "copy-to-docs": "sh scripts/copy-to-docs.sh",
        "publish": "lerna publish from-package",
        "publishWithDocs": "lerna publish from-package && pnpm build-docs",
        "build-docs": "sh scripts/build-docs.sh osui && sh scripts/build-docs.sh icloud",
        "test": "lerna exec --no-private --concurrency 10 -- pnpm test",
        "build-check": "node scripts/build-check.js",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@ant-design/tools": "^14.0.0-alpha.3",
        "@babel/core": "^7.10.5",
        "@commitlint/cli": "^9.1.1",
        "@commitlint/config-conventional": "^9.1.1",
        "@emotion/babel-preset-css-prop": "^11.2.0",
        "@osui/icons": "^2.1.0",
        "@osui/icons-icloud": "^2.1.0",
        "@reskript/cli": "^2.2.2",
        "@reskript/cli-lint": "^2.2.2",
        "@storybook/cli": "^6.0.26",
        "@types/css": "^0.0.33",
        "@types/less": "^3.0.3",
        "commitizen": "^4.1.2",
        "css": "^3.0.0",
        "cz-conventional-changelog": "^3.2.0",
        "enzyme-adapter-react-16": "^1.15.6",
        "enzyme-to-json": "^3.6.2",
        "eslint-plugin-import": "^2.24.0",
        "husky": "^8.0.0",
        "jest": "^27.2.1",
        "lerna": "^3.22.1",
        "less": "^4.1.2",
        "less-vars-to-js": "^1.3.0",
        "lodash": "^4.17.21",
        "mkdirp": "^1.0.4",
        "mockdate": "^3.0.5",
        "moment": "^2.29.1",
        "rc-util": "^5.22.5",
        "require-from-string": "^2.0.2",
        "rimraf": "^3.0.2",
        "styled-components": "~5.3.5",
        "stylelint-config-rational-order": "^0.1.2",
        "typescript": "^4.4.3",
        "webpack": "^5.52.1"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
